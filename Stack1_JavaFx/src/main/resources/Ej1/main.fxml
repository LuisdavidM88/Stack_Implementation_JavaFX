<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Ej1.Ventana">
    <top>
        <Label text="Pila de Publicaciones (JavaFX)" BorderPane.alignment="CENTER">
            <padding><Insets topRightBottomLeft="8"/></padding>
        </Label>
    </top>

    <center>
        <GridPane hgap="8" vgap="8" style="-fx-padding: 10;">
            <columnConstraints>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="80"/>
            </columnConstraints>

            <Label text="Código (int):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Título:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTitulo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Mensaje:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtMensaje" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <HBox spacing="8" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button fx:id="btnPush" text="Push (Insertar)"/>
                <Button fx:id="btnPeek" text="Peek (Ver cima)"/>
                <Button fx:id="btnPop" text="Pop (Eliminar cima)"/>
            </HBox>

            <Label fx:id="lblCantidad" text="Elementos en la pila: 0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Contenido de la pila:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ListView fx:id="lstPila" GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="240"/>
        </GridPane>
    </center>
</BorderPane>
